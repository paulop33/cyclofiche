{% extends 'admin/base.html.twig' %}

{% block title %}Organisation{% endblock %}

{% block body %}
    <h1>Organisation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organisation.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ organisation.libelle }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_organisation_edit', {'id': organisation.id}) }}">edit</a>

    <h1>OrganisationUser index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
        </tr>
        </thead>
        <tbody>
        {% for organisation_user in organisation_users %}
            <tr>
                <td>{{ organisation_user.id }}</td>
                <td>{{ organisation_user.email }}</td>
                <td>{{ organisation_user.firstname }}</td>
                <td>{{ organisation_user.lastname }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_admin_organisation_user_new', {'organisation' : organisation.id }) }}">Create new</a>


    <a href="{{ path('app_admin_organisation_index') }}">back to list</a>


    {{ include('admin/organisation/_delete_form.html.twig') }}
{% endblock %}
