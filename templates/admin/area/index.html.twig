{% extends 'admin/base.html.twig' %}

{% block title %}Area index{% endblock %}

{% block body %}
    <h1>Area index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Coordinates</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for area in areas %}
            <tr>
                <td>{{ area.id }}</td>
                <td>{{ area.libelle }}</td>
                <td>{{ area.coordinates }}</td>
                <td>
                    <a href="{{ path('app_admin_area_show', {'id': area.id}) }}">show</a>
                    <a href="{{ path('app_admin_area_edit', {'id': area.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_area_new') }}">Create new</a>
{% endblock %}
